<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:id="@+id/displayEditText3"
                style="@android:style/TextAppearance.Material.Display1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="1"
                android:layout_weight="1"
                android:editable="false"
                android:ems="20"
                android:enabled="false"
                android:inputType="none"
                android:maxLines="1"
                android:minLines="1"
                android:textIsSelectable="true"
                android:typeface="monospace" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:id="@+id/displayEditText2"
                style="@android:style/TextAppearance.Material.Display1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="1"
                android:layout_weight="1"
                android:editable="false"
                android:ems="20"
                android:enabled="false"
                android:inputType="none"
                android:maxLines="1"
                android:minLines="1"
                android:textIsSelectable="true"
                android:typeface="monospace" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:id="@+id/displayEditText1"
                style="@android:style/TextAppearance.Material.Display1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="1"
                android:layout_weight="1"
                android:editable="false"
                android:ems="20"
                android:inputType="none"
                android:maxLines="1"
                android:minLines="1"
                android:text="0"
                android:textIsSelectable="true"
                android:typeface="monospace" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4">

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_column="4"
                android:layout_weight="4" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="0"
                android:layout_weight="2"
                android:onClick="onButtonDeleteClick"
                android:text="Delete" />

            <Button
                android:id="@+id/buttonSwap"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButtonSwapClick"
                android:text="Swap"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonDown"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="2"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButtonDownClick"
                android:text="Down"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4">

            <Button
                android:id="@+id/buttonStore"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButtonStoreClick"
                android:text="Store"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonRecall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButtonRecallClick"
                android:text="Recall"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonEnter"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="2"
                android:layout_span="1"
                android:layout_weight="2"
                android:onClick="onButtonEnterClick"
                android:text="Enter" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButton7Click"
                android:text="7"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButton8Click"
                android:text="8"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="2"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButton9Click"
                android:text="9"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="3"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButtonDivideClick"
                android:text="÷"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButton4Click"
                android:text="4"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButton5Click"
                android:text="5"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="2"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButton6Click"
                android:text="6"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="3"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButtonMultiplyClick"
                android:text="×"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButton1Click"
                android:text="1"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButton2Click"
                android:text="2"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="2"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButton3Click"
                android:text="3"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="3"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButtonSubtractClick"
                android:text="−"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButton0Click"
                android:text="0"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButtonDotClick"
                android:text="."
                android:textSize="18dp" />

            <Button
                android:id="@+id/buttonNegate"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="2"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButtonNegateClick"
                android:text="+/−"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_column="3"
                android:layout_span="1"
                android:layout_weight="1"
                android:onClick="onButtonAddClick"
                android:text="+"
                android:textSize="18dp" />
        </TableRow>

    </TableLayout>
</RelativeLayout>
